# Server Port
PORT=8080

# Basis-URL der OpenProject-Instanz, z. B. https://my-company.openproject.com
OP_BASE_URL=https://example.openprojectcloud.de

# Zugangsdaten für den technischen Benutzer
OP_USERNAME=apikey
OP_API_TOKEN=

# Für lokale Entwicklung ohne OpenProject-Verbindung
OP_USE_MOCK=true

# Kommagetrennte Liste der Work-Package-Typen (Milestone, Deliverable, External Goal, Internal Goal, Offer)
OP_TARGET_TYPES=Milestone,Deliverable,Goal,Internal Goal,Angebot
